<Element
    orientation="Vertical"
    backgroundColor="glm::vec4(255)"
    stopEvents="1">
    <CuNavigationBar title="_s(Action Sheet)"></CuNavigationBar>
    <Element
        width="100%"
        height="100%"
        scaling="Shrink"
        orientation="Vertical">

        <CuButton
            element="mShowButton"
            marginTop='"20dp"'
            title="_s(Show Action Sheet)">
          
        </CuButton>
    </Element>
    <CuActionSheet element="mActionSheet">
        <CuActionSheetAction title="_s(Cheesecake)"></CuActionSheetAction>
        <CuActionSheetAction title="_s(Tiramisu)"></CuActionSheetAction>
        <CuActionSheetAction title="_s(Apple Pie)"></CuActionSheetAction>
        <CuActionSheetAction title="_s(Cancel)" default="1"></CuActionSheetAction>
    </CuActionSheet>

</Element>