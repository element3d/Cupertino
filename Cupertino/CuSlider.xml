<Element
    width='"300dp"'
    height='"30dp"'>
    <Element
        width="100%"
        height='"3dp"'
        backgroundColor="glm::vec4(199 ,199, 204, 255)">
    </Element>
    <Element
        element="mValue"
        positionType="Absolute"
        width="0"
        left="0"
        height='"3dp"'
        backgroundColor="glm::vec4(0, 122, 255, 255)">
    </Element>
    <Element
        element="mDivisions"
        positionType="Absolute"
        alignItemsHor="SpaceBetween"
        left="0"
        width="100%"
        height='"6dp"'>
    </Element>
    <Element
        element="mCircle"
        positionType="Absolute"
        height="100%"
        left="0"
        aspectRatio="1"
        borderRadius="all: 0.5"
        backgroundColor="glm::vec4(255)"
        >
        <Shadow
            offset="x: 0, y: 5"
            color="glm::vec4(50, 50, 50, 255)"
            opacity="0.5"
            blurSize='e3::Dim("25")'
            scale="1">
        </Shadow>
    </Element>
</Element>